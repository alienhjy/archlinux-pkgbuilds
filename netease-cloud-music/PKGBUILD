pkgname=netease-cloud-music
pkgver=1.1.0
pkgrel=1
pkgdesc="Netease Cloud Music, converted from .deb package"
arch=("x86_64")
url="http://music.163.com/"
license=('custom')
depends=(
	"alsa-lib" "gtk2" "nss" "libxss"
	"qt5-multimedia" "qt5-x11extras"
	"gst-libav" "gst-plugins-base"
	"gst-plugins-good" "gst-plugins-ugly"
	"vlc"
)
source=(
	"http://cdimage.deepin.com/applications/${pkgname}/64/${pkgname//-/_}_${pkgver}_amd64_binary.tar.gz"
	"http://music.163.com/html/web2/service.html"
)
md5sums=('a09dbf27c3e009bdfdc487975a4f4a52'
         'e671fac37a3a484a9f177a03c3217409')

package() {
  cd ${srcdir}
  cp -a usr/ ${pkgdir}/
  install -D -m644 service.html ${pkgdir}/usr/share/licenses/$pkgname/license.html
}
